{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/shared/components/*"], // 공통 UI 컴포넌트 경로(UI Component는 퍼블수정이 있을 수 있어서 shared 폴더에 위치)
			"@hooks/*": ["./src/core/hooks/*"], // 공통 훅 경로
			"@app-types/*": ["./src/core/types/*"], // 공통 타입 경로
			"@fetch/*": ["./src/core/common/*"] // 공통 API 파일 경로
		},
		"baseUrl": ".",
		"typeRoots": ["./node_modules/@types", "./@types"] // type 루트 설정
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts",
		"@types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
